alias vi=nvim
alias initvi="rm -rf ~/.local/share/nvim && 
  rm -rf ~/.cache/nvim &&
  rm -rf ~/.local/state/nvim &&
  git clone https://github.com/AstroNvim/AstroNvim ~/.config/nvim &&
  ln -s ~/.config/astro_user ~/.config/nvim/lua/user &&
  nvim  --headless -c 'quitall'"

alias lg='lazygit --use-config-file="$HOME/.config/lazygit/config.yml"'
alias gaa='git add .'
alias gcm='git commit -m'
alias gco='git checkout'
alias gp='git push'
alias gup='git pull --rebase --autostash'
alias gst='git status -s'
alias nope='git reset --hard;git clean -df;'
alias sudo='sudo '

alias ls='exa --icons --grid -a --group-directories-first'
alias la='exa --icons -a -l --group-directories-first'

alias cat=bat
alias phpserve='php -S localhost:8000 && open http://localhost:8000'
alias ping='prettyping --nolegend'
alias ytdl='youtube-dl -f '\''bestaudio'\'' --write-thumbnail'

alias t="tmux"
alias ta="t a -t"
alias tls="t ls"
alias tn="t new -t"
